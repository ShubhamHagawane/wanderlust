<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Your Host Profile</h3>
        <hr>
        
        <form action="/host/<%= hostProfile.user %>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="profilePicture" class="form-label">Profile Picture URL</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="profilePicture" 
                    name="hostProfile[profilePicture]"
                    value="<%= hostProfile.profilePicture %>"
                    placeholder="https://example.com/your-photo.jpg">
                <small class="form-text text-muted">Enter a URL for your profile picture</small>
            </div>
            
            <div class="mb-3">
                <label for="bio" class="form-label">About You</label>
                <textarea 
                    class="form-control" 
                    id="bio" 
                    name="hostProfile[bio]" 
                    rows="5"
                    maxlength="500"
                    placeholder="Tell guests about yourself..."><%= hostProfile.bio || '' %></textarea>
                <small class="form-text text-muted">Maximum 500 characters</small>
            </div>
            
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input 
                    type="tel" 
                    class="form-control" 
                    id="phone" 
                    name="hostProfile[phone]"
                    value="<%= hostProfile.phone || '' %>"
                    pattern="[0-9]{10}"
                    placeholder="9876543210">
                <small class="form-text text-muted">10 digit phone number</small>
            </div>
            
            <div class="mb-3">
                <label for="languages" class="form-label">Languages You Speak</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="languages" 
                    name="hostProfile[languages]"
                    value="<%= hostProfile.languages ? hostProfile.languages.join(', ') : '' %>"
                    placeholder="English, Hindi, Marathi">
                <small class="form-text text-muted">Separate multiple languages with commas</small>
            </div>
            
            <div class="mb-3">
                <label for="responseTime" class="form-label">Response Time</label>
                <select class="form-select" id="responseTime" name="hostProfile[responseTime]">
                    <option value="Within an hour" <%= hostProfile.responseTime === 'Within an hour' ? 'selected' : '' %>>
                        Within an hour
                    </option>
                    <option value="Within a few hours" <%= hostProfile.responseTime === 'Within a few hours' ? 'selected' : '' %>>
                        Within a few hours
                    </option>
                    <option value="Within a day" <%= hostProfile.responseTime === 'Within a day' ? 'selected' : '' %>>
                        Within a day
                    </option>
                    <option value="A few days or more" <%= hostProfile.responseTime === 'A few days or more' ? 'selected' : '' %>>
                        A few days or more
                    </option>
                </select>
            </div>
            
            <button class="btn btn-success">Save Changes</button>
            <a href="/host/<%= hostProfile.user %>" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>