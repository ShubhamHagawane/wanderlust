<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-10 offset-1">
        <h2>Booking Requests for My Listings</h2>
        <hr>
        
        <% if(bookings.length === 0) { %>
            <div class="alert alert-info">
                <p>No booking requests yet.</p>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Listing</th>
                            <th>Guest</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Guests</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let booking of bookings) { %>
                            <tr>
                                <td>
                                    <a href="/listings/<%= booking.listing._id %>">
                                        <%= booking.listing.title %>
                                    </a>
                                </td>
                                <td><%= booking.user.username %></td>
                                <td><%= booking.checkIn.toLocaleDateString() %></td>
                                <td><%= booking.checkOut.toLocaleDateString() %></td>
                                <td><%= booking.guests %></td>
                                <td>&#8377;<%= booking.totalPrice.toLocaleString("en-IN") %></td>
                                <td>
                                    <% if(booking.status === 'pending') { %>
                                        <span class="badge bg-warning">Pending</span>
                                    <% } else if(booking.status === 'confirmed') { %>
                                        <span class="badge bg-success">Confirmed</span>
                                    <% } else if(booking.status === 'cancelled') { %>
                                        <span class="badge bg-danger">Cancelled</span>
                                    <% } else if(booking.status === 'completed') { %>
                                        <span class="badge bg-secondary">Completed</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(booking.status === 'pending') { %>
                                        <form action="/bookings/<%= booking._id %>/status?_method=PATCH" method="POST" class="d-inline">
                                            <input type="hidden" name="status" value="confirmed">
                                            <button class="btn btn-sm btn-success">Accept</button>
                                        </form>
                                        <form action="/bookings/<%= booking._id %>/status?_method=PATCH" method="POST" class="d-inline">
                                            <input type="hidden" name="status" value="cancelled">
                                            <button class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>