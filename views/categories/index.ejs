<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Browse by Category</h2>
        <% if(currUser) { %>
            <a href="/categories/new" class="btn btn-primary">Add Category</a>
        <% } %>
    </div>
    
    <% if(categories.length === 0) { %>
        <div class="alert alert-info">
            <p>No categories available yet.</p>
        </div>
    <% } else { %>
        <div class="row">
            <% for(let category of categories) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <a href="/categories/<%=category._id%>/listings" class="text-decoration-none">
                        <div class="card category-card h-100 shadow-sm hover-shadow">
                            <img src="<%=category.image%>" class="card-img-top" alt="<%=category.name%>" style="height: 200px; object-fit: cover;">
                            <div class="card-body text-center">
                                <div style="font-size: 2rem;"><%=category.icon%></div>
                                <h5 class="card-title mt-2"><%=category.name%></h5>
                                <p class="card-text text-muted small"><%=category.description%></p>
                            </div>
                        </div>
                    </a>
                    
                    <!-- <% if(currUser) { %>
                        <div class="mt-2">
                            <a href="/categories/<%=category._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/categories/<%=category._id%>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </div>
                    <% } %> -->
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<style>
    .category-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }
    
    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
</style>