<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-4">
    <div class="mb-4">
        <a href="/categories" class="btn btn-outline-secondary mb-3">‚Üê Back to Categories</a>
        <h2>
            <span style="font-size: 2rem;"><%=category.icon%></span>
            <%=category.name%>
        </h2>
        <p class="text-muted"><%=category.description%></p>
    </div>
    
    <% if(listings.length === 0) { %>
        <div class="alert alert-info">
            <p>No listings available in this category yet.</p>
            <% if(currUser) { %>
                <a href="/listings/new" class="btn btn-primary">Create First Listing</a>
            <% } %>
        </div>
    <% } else { %>
        <div class="row">
            <% for(let listing of listings) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <a href="/listings/<%=listing._id%>" class="listing-link">
                        <div class="card listing-card h-100">
                            <img src="<%=listing.image%>" class="card-img-top" alt="<%=listing.title%>" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title"><%=listing.title%></h6>
                                <p class="card-text text-muted small">
                                    <%=listing.location%>, <%=listing.country%>
                                </p>
                                <p class="card-text">
                                    <strong>&#8377;<%=listing.price.toLocaleString("en-IN")%></strong> / night
                                </p>
                                <% if(listing.owner) { %>
                                    <p class="card-text small text-muted">
                                        Hosted by <%=listing.owner.username%>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>
    <% } %>
</div>

<style>
    .listing-link {
        text-decoration: none;
        color: inherit;
    }
    
    .listing-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .listing-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
</style>