<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-3 mt-3">
    <h2><b><%=listing.title%></b></h2>
</div>    
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
            <% if(listing.category) { %>
            <p class="card-text">
                <span class="badge bg-primary">
                    <%=listing.category.icon%> <%=listing.category.name%>
                </span>
            </p>
            <% } %>
        <% if(listing.owner) { %>
            <p class="card-text">
                Hosted by 
                <a href="/host/<%= listing.owner._id %>" class="text-decoration-none">
                    <strong><i><%= listing.owner.username %></i></strong>
                </a>
            </p>
        <% } %>
            <p class="card-text"><%=listing.description%></p>
            <p class="card-text">&#8377;<%=listing.price.toLocaleString("en-IN")%> </p>
            <p class="card-text"><%=listing.location%></p>
            <p class="card-text"><%=listing.country%></p>
        
    </div>
    <br>
    
</div>
<div class="btns mb-3">
    <% if(currUser ) { %>
        <a href="/listings/<%=listing._id%>/book" class="btn btn-success col-2 offset-3">Book Now</a>
    <% } %>
    
    <% if(currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    <% } %>
</div>




    <div class="col-8 offset-3 mb-3">
        <hr>
        <%if(currUser){%>
        <h4>Leave a review</h4>
        <form action="/listings/<%=listing._id%>/reviews" 
            method="POST"
            novalidate
            class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range"min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please add some comments for review.
                    </div>
            </div>
            
            <button class="btn btn-outline-dark">Submit</button>
            <%}%>
        </form>

        

        <p><b>All Reviews</b></p>
        <div class="row ">
            <%for(review of listing.reviews){%>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<i><%=review.author.username%></i></h5>
                         <p class="card-text"><%=review.comment%></p>
                         <p class="card-text"><%=review.rating%> Stars</p>
                    </div>
                    <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="mb-3">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            <%}%>
    </div>
    </div>
</div>

